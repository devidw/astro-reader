@import "@fontsource/noto-serif/latin-400.css"
@import "@fontsource/noto-serif/latin-400-italic.css"
@import "@fontsource/noto-serif/latin-700.css"
@import "@fontsource/noto-serif/latin-700-italic.css"

::selection
  @apply bg-sky-2 text-black

*
  -webkit-tap-highlight-color transparent
    
body
  @apply break-words hyphens-auto
  background #101010
  color #a7a7ad
  font-family "Noto Serif"
  font-size 17px
  line-height 1.5

  text-rendering optimizeLegibility
  font-smooth always
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

article.reader
  --at-apply 'max-w-md mx-auto '
  @import "./reader.styl"

body.js
  .reader__page
    // min-h required for swipe gestures
    --at-apply: "min-h-screen px-4 pt-20"
  
  header.reader__page
    min-height unset
